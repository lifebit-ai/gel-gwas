docker.enabled = true

params {
  vcfsList = false
  plinkFile = false
  phenoFile = false
  phenoCol = false
  qFilter = '0.005:minor'
  thres_m = '1e-5'
  thres_HWE = '1e-5'
  plink_keep_pheno = "$baseDir/testdata/nofile"
  sampleIDColinphenoFile = 'IID'
  traitType = 'binary'
  saigeStep1ExtraFlags = "--LOCO=FALSE"
  outdir = 'results'
}

process {
  withName: gwas_filtering {
    container = 'lifebitai/gel-gwas:latest'
  }
  withName: gwas_1_fit_null_glmm {
    container = 'wzhou88/saige:0.39'
  }
  withName: gwas_2_spa_tests {
    container = 'wzhou88/saige:0.39'
  }
}

